{% extends 'base.html.twig' %}

{% block titre %}  {{ parent() }} | Accueil {% endblock %}

{% block main %}
    <div class="sortir">
        <h1>Filtrer les sorties</h1>

        <nom>Site :</nom>

        <!--Formulaire de recherche de sortie-->
        <form method="get">

            <!--Selection du site avec une boucle for-->
            <select>Site :
                {% for site in site %}
                    <div class="site" data-site=" {{ site.id }}">
                        <option valeur="#">{{ site.nom }}</option>
                    </div>
                {% endfor %}
            </select>
            <br>

            <!--Barre de recherche de la sortie-->
            <label>Le nom de la sortie contient :
                    <div class="sortie">
                        <input type="text" id="recherche" name="recherche" placeholder="Rechercher"/></input>
                    </div>
            </label>


            <!--Selection des dates-->
            <label for="date début">Entre
                <input id="date_début" type="date" name="date début" min="d-m-Y" max="d/m/Y">
            </label>
            <label for="date début">et
                <input id="date_début" type="date" name="date début" min="d/m/Y" max="d/m/Y">
            </label>
            <br>

            <!--Selection des types de sortie-->
            <label>
                <input type="checkbox" name="choix1" value="1">
            </label>
            Sorties dont je suis l'organisateur/trice<br>
            <label>
                <input type="checkbox" name="choix2" value="2">
            </label>
            Sorties auxquelles je suis inscrit/e<br>
            <label>
                <input type="checkbox" name="choix3" value="3">
            </label>
            Sorties auxquelles je ne suis pas inscrit/e<br>
            <label>
                <input type="checkbox" name="choix4" value="4">
            </label>
            Sorties passées
            <br><br>

            <button type="submit" class="button">Rechercher</button>
            <br><br>
        </form>

        <!--Affichage des sorties-->
        <div class="listSortie">
            <table style="width: 100%">
                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th scope="col">Clôture</th>
                    <th scope="col">Etat</th>
                    <th scope="col">Organisateur</th>
                    <th scope="col">Actions</th>
                </tr>

                {% for sortie in sorties %}
                    <tr>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateHeureDebut|date("d/m/Y") }}</td>
                        <td>{{ sortie.dateLimiteInscription|date("d/m/Y") }}</td>
                        <td>{{ sortie.etats.libelle }}</td>
                        <td><a href="{{ path('profil_detail',{'id': sortie.organisateur.id}) }}">{{ sortie.organisateur.pseudo }}</td>
                        <td><a href="{{ path('sortie_detail',{'id': sortie.id}) }}">Afficher
                                <form>
                                    Inscription
                                </form>
                            </a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    <br>
    <a href="{{ path('sortie_ajouter') }}" class="button">Créer une sortie</a>

{% endblock %}
