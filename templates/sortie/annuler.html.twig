{% extends 'base.html.twig' %}

{% block titre %} {{ parent() }} | Annuler sortie{% endblock %}

{% block main %}
    <h1>Annuler une sortie</h1>

    <div>Nom de la sortie : </div>
    <div>Date et heure : {{ sortie.dateHeureDebut|date("d/m/Y") }}</div>
    <div>Ville organisatrice: {{ sortie.sites.nom }}</div>
    <div>Lieu : {{ sortie.lieux.nom }}
        <br> {{ sortie.lieux.rue }}
        <br> {{ sortie.lieux.villes.codePostal }} {{ sortie.lieux.villes.nom }}</div>

{#    <div>Description et infos : {{ sortie.infosSortie }}</div>#}
    {{ form_start(sortieForm) }}
        <div class="label">
            {{ form_label(sortieForm.infosSortie) }}</div>
        <div class="input-group">
            {{ form_widget(sortieForm.infosSortie) }}</div>

    <div class="input-group">
        {{ form_widget(sortieForm.annuler) }}</div>

        {{ form_end(sortieForm) }}

    <a href="{{ path('accueil') }}" class="button">Retour</a>






{% endblock %}
